{
  "name": "vscode-code-review-helper",
  "displayName": "Code Review Helper",
  "description": "简单易用的代码评审工具，支持添加评审意见、可视化标记、Excel导入导出等功能",
  "version": "4.2.2",
  "publisher": "code-review-helper",
  "repository": {
    "type": "git",
    "url": "https://github.com/code-review-helper/vscode-code-review-helper.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "code review",
    "code inspection",
    "team collaboration"
  ],
  "activationEvents": [
    "onCommand:codeReviewHelper.addComment",
    "onCommand:codeReviewHelper.openPanel",
    "onCommand:codeReviewHelper.settings",
    "onView:codeReviewPanel",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeReviewHelper.addComment",
        "title": "添加评审意见",
        "category": "Code Review"
      },
      {
        "command": "codeReviewHelper.openPanel",
        "title": "打开评审面板",
        "category": "Code Review"
      },
      {
        "command": "codeReviewHelper.settings",
        "title": "插件设置",
        "category": "Code Review"
      },
      {
        "command": "codeReviewHelper.jumpToComment",
        "title": "跳转到代码位置",
        "category": "Code Review"
      },
      {
        "command": "codeReviewHelper.exportComments",
        "title": "导出评审意见",
        "category": "Code Review"
      },
      {
        "command": "codeReviewHelper.importComments",
        "title": "导入评审意见",
        "category": "Code Review"
      },
      {
        "command": "codeReviewHelper.clearComments",
        "title": "清空所有评审意见",
        "category": "Code Review"
      },
      {
        "command": "codeReviewHelper.commitToServer",
        "title": "提交到服务端",
        "category": "Code Review"
      },
      {
        "command": "codeReviewHelper.pullFromServer",
        "title": "从服务端拉取",
        "category": "Code Review"
      },
      {
        "command": "codeReviewHelper.deleteComment",
        "title": "删除评审意见",
        "category": "Code Review"
      },
      {
        "command": "codeReviewHelper.showCommentDetail",
        "title": "显示详情",
        "category": "Code Review"
      },
      {
        "command": "codeReviewHelper.showOriginalSnapshot",
        "title": "显示原始快照",
        "category": "Code Review"
      },
      {
        "command": "codeReviewHelper.refreshProjects",
        "title": "刷新项目列表",
        "category": "Code Review"
      }
    ],
    "keybindings": [
      {
        "command": "codeReviewHelper.addComment",
        "key": "alt+a",
        "when": "editorTextFocus"
      }
    ],
    "views": {
      "codeReview": [
        {
          "id": "codeReviewPanel",
          "name": "评审意见",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeReview",
          "title": "代码评审",
          "icon": "$(book)"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "codeReviewHelper.addComment",
          "group": "codeReview",
          "when": "editorHasSelection"
        }
      ],
      "view/title": [
        {
          "command": "codeReviewHelper.settings",
          "when": "view == codeReviewPanel",
          "group": "navigation",
          "icon": "$(gear)"
        },
        {
          "command": "codeReviewHelper.commitToServer",
          "when": "view == codeReviewPanel",
          "group": "navigation",
          "icon": "$(upload)"
        },
        {
          "command": "codeReviewHelper.pullFromServer",
          "when": "view == codeReviewPanel",
          "group": "navigation",
          "icon": "$(download)"
        },
        {
          "command": "codeReviewHelper.exportComments",
          "when": "view == codeReviewPanel",
          "group": "navigation",
          "icon": "$(export)"
        },
        {
          "command": "codeReviewHelper.importComments",
          "when": "view == codeReviewPanel",
          "group": "navigation",
          "icon": "$(import)"
        },
        {
          "command": "codeReviewHelper.clearComments",
          "when": "view == codeReviewPanel",
          "group": "navigation",
          "icon": "$(trash)"
        },
        {
          "command": "codeReviewHelper.refreshProjects",
          "when": "view == codeReviewPanel",
          "group": "navigation",
          "icon": "$(refresh)"
        }
      ],
      "view/item/context": [
        {
          "command": "codeReviewHelper.showCommentDetail",
          "when": "view == codeReviewPanel",
          "group": "inline"
        },
        {
          "command": "codeReviewHelper.showOriginalSnapshot",
          "when": "view == codeReviewPanel",
          "group": "inline"
        },
        {
          "command": "codeReviewHelper.deleteComment",
          "when": "view == codeReviewPanel",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Code Review Helper",
      "properties": {
        "codeReviewHelper.serverAddress": {
          "type": "string",
          "default": "",
          "description": "服务端地址（网络模式时使用）"
        },
        "codeReviewHelper.account": {
          "type": "string",
          "default": "",
          "description": "登录账号（网络模式时使用）"
        },
        "codeReviewHelper.password": {
          "type": "string",
          "default": "",
          "description": "登录密码（网络模式时使用）"
        },
        "codeReviewHelper.networkMode": {
          "type": "boolean",
          "default": false,
          "description": "是否启用网络模式（需要配置服务端信息）"
        },
        "codeReviewHelper.language": {
          "type": "string",
          "default": "zh",
          "enum": [
            "zh",
            "en"
          ],
          "description": "界面语言"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run sync-version && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "sync-version": "node scripts/sync-version.js",
    "package": "npm run sync-version && npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "xlsx": "^0.18.5"
  }
}
